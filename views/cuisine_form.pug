extends layout

block content
  section(class="form")
    h1(class="form__title") #{title}

    form(class="form__form" method='POST' action='')
      div(class="form__form--section")
        label(for='name') Cuisine:
        input(type='text', placeholder='Indian, American, etc...' name='name' value=(undefined===cuisine ? '' : cuisine.name))
        label(for='country') Country:
        input(type='text', placeholder='India, United States, etc...' name='country' value=(undefined===cuisine ? '' : cuisine.country))
        label(for='description') Description:
        input(type='text', placeholder='Indian cuisine consists of a variety of regional and traditional cuisines native to India...' name='description' value=(undefined===cuisine ? '' : cuisine.description))
      button(class="btn submit" type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg